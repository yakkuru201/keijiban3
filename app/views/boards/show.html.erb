<h1><%= @board.name %></h1>

<%= link_to 'edit this board', edit_board_path(@board) %>
<br>
<%= link_to 'delete this board', board_path(@board), method: :delete, confirm: "are you ok?" %>

<hr>

<h1>new comment</h1>
<%= form_for [@board, @board.comments.build] do |f| %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>

<hr>

<%= link_to 'back to index', boards_path() %>
